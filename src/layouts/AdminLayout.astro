---
import type { User } from "@/types";
import "@/styles/global.css";
import { Sidebar } from "@/components/admin/Sidebar";
import { Toaster } from "@/components/ui/toaster";

interface Props {
  title: string;
  description?: string;
  user: User;
  currentPath: string;
}

const { title, description, user, currentPath } = Astro.props;
---

<!doctype html>
<html lang="pl" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{title} - Uniwersytet AI Admin</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body class="bg-slate-950 text-white antialiased">
    <!-- Toast notifications -->
    <Toaster client:only="react" />

    <!-- Sidebar -->
    <Sidebar currentPath={currentPath} user={user} client:load />

    <!-- Main content -->
    <div class="lg:pl-64">
      <div class="min-h-screen">
        <!-- Header -->
        <header class="sticky top-0 z-30 border-b border-white/10 bg-slate-900/95 backdrop-blur-sm">
          <div class="flex h-16 items-center justify-between px-4 sm:px-6 lg:px-8">
            <div>
              <h1 class="text-2xl font-bold text-white">{title}</h1>
              {description && <p class="text-sm text-gray-400 mt-0.5">{description}</p>}
            </div>

            <!-- User info -->
            <div class="flex items-center gap-3">
              <div class="text-right hidden sm:block">
                <p class="text-sm font-medium text-white">{user.full_name || user.email}</p>
                <p class="text-xs text-gray-400">
                  {user.role === "admin" ? "Administrator" : user.role === "instructor" ? "Prowadzący" : "Użytkownik"}
                </p>
              </div>
              <div
                class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center text-white font-semibold"
              >
                {user.full_name ? user.full_name.charAt(0).toUpperCase() : "A"}
              </div>
            </div>
          </div>
        </header>

        <!-- Page content -->
        <main class="p-4 sm:p-6 lg:p-8">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
