---
// Navbar component with sticky positioning and backdrop blur
---

<nav
  class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-slate-900/80 border-b border-white/10"
  role="navigation"
  aria-label="Main navigation"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2" aria-label="LearnAI - Strona główna">
          <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-xl" aria-hidden="true">L</span>
          </div>
          <span class="text-white font-bold text-xl">LearnAI</span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a href="#features" class="text-gray-300 hover:text-white transition-colors">Funkcje</a>
        <a href="#dla-kogo" class="text-gray-300 hover:text-white transition-colors">Dla kogo</a>
        <a href="#o-platformie" class="text-gray-300 hover:text-white transition-colors">O platformie</a>
        <a href="#kontakt" class="text-gray-300 hover:text-white transition-colors">Kontakt</a>
      </div>

      <!-- CTA Buttons -->
      <div class="hidden md:flex items-center space-x-4">
        <a href="/login" class="text-gray-300 hover:text-white transition-colors px-4 py-2"> Zaloguj się </a>
        <a href="/demo" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg transition-colors">
          Wypróbuj za darmo
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-gray-300 hover:text-white"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-slate-900/95 backdrop-blur-md" role="menu">
    <div class="px-4 pt-2 pb-4 space-y-2">
      <a href="#features" class="block text-gray-300 hover:text-white py-2 transition-colors" role="menuitem">Funkcje</a
      >
      <a href="#dla-kogo" class="block text-gray-300 hover:text-white py-2 transition-colors" role="menuitem"
        >Dla kogo</a
      >
      <a href="#o-platformie" class="block text-gray-300 hover:text-white py-2 transition-colors" role="menuitem"
        >O platformie</a
      >
      <a href="#kontakt" class="block text-gray-300 hover:text-white py-2 transition-colors" role="menuitem">Kontakt</a>
      <div class="pt-4 space-y-2">
        <a
          href="/login"
          class="block text-center text-gray-300 hover:text-white py-2 transition-colors border border-gray-600 rounded-lg"
          role="menuitem"
        >
          Zaloguj się
        </a>
        <a
          href="/demo"
          class="block text-center bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-lg transition-colors"
          role="menuitem"
        >
          Wypróbuj za darmo
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const button = document.getElementById("mobile-menu-button");
  const menu = document.getElementById("mobile-menu");

  button?.addEventListener("click", () => {
    const isExpanded = menu?.classList.contains("hidden");
    menu?.classList.toggle("hidden");
    button?.setAttribute("aria-expanded", isExpanded ? "true" : "false");
  });

  // Close mobile menu when clicking on a link
  const mobileLinks = menu?.querySelectorAll("a");
  mobileLinks?.forEach((link) => {
    link.addEventListener("click", () => {
      menu?.classList.add("hidden");
      button?.setAttribute("aria-expanded", "false");
    });
  });
</script>
