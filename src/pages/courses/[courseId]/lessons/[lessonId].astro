---
import Layout from "@/layouts/Layout.astro";
import { ModulesList } from "@/components/course/ModulesList";
import { LessonContent as NewLessonContent } from "@/components/course/LessonContent";
import { ChatWidget } from "@/components/chat/ChatWidget";

const { courseId, lessonId } = Astro.params;

if (!courseId || !lessonId) {
  return Astro.redirect("/courses");
}

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/login");
}

// Fetch lesson details with modules structure
let lesson = null;
let course = null;
let modulesWithLessons: any[] = [];
let error: string | null = null;
let hasAccess = false;

try {
  const { supabase } = Astro.locals;

  // Fetch course
  const { data: courseData, error: courseError } = await supabase
    .from("courses")
    .select("*")
    .eq("id", courseId)
    .single();

  if (courseError || !courseData) {
    error = "Nie znaleziono kursu";
  } else {
    course = courseData;

    // Check access
    const isFree = !course.price || course.price === 0;
    const { data: enrollment } = await supabase
      .from("course_enrollments")
      .select("id")
      .eq("course_id", courseId)
      .eq("user_id", user.id)
      .single();

    hasAccess = isFree || !!enrollment || user.role === "admin";

    if (hasAccess) {
      // Fetch modules with lessons using the new API endpoint
      const modulesResponse = await fetch(`${Astro.url.origin}/api/courses/${courseId}/modules`, {
        headers: {
          cookie: Astro.request.headers.get("cookie") || "",
        },
      });

      if (modulesResponse.ok) {
        const modulesResult = await modulesResponse.json();
        if (modulesResult.success) {
          modulesWithLessons = modulesResult.data;

          // Find current lesson in modules
          for (const module of modulesWithLessons) {
            const foundLesson = module.lessons.find((l: any) => l.id === lessonId);
            if (foundLesson) {
              lesson = foundLesson;
              break;
            }
          }

          if (!lesson) {
            error = "Nie znaleziono lekcji";
          }
        }
      }
    }
  }
} catch (err) {
  console.error("Error fetching lesson:", err);
  error = "Wystąpił błąd podczas pobierania lekcji";
}

// Calculate overall progress
let totalLessons = 0;
let completedLessons = 0;

modulesWithLessons.forEach((module) => {
  totalLessons += module.lessons.length;
  completedLessons += module.lessons.filter((l: any) => l.completed).length;
});

const progressPercentage = totalLessons > 0 ? Math.round((completedLessons / totalLessons) * 100) : 0;

const progress = {
  completed: completedLessons,
  total: totalLessons,
  percentage: progressPercentage,
};
---

<Layout title={lesson ? `${lesson.title} - ${course.title}` : "Lekcja"}>
  {
    error || !lesson || !hasAccess ? (
      <div class="min-h-screen bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950 flex items-center justify-center px-4">
        <div class="max-w-md w-full bg-slate-800/50 border border-white/10 backdrop-blur-sm rounded-lg p-8 text-center">
          <p class="text-red-400 text-lg mb-4">{error || "Brak dostępu do tej lekcji"}</p>
          <button
            onclick="window.history.back()"
            class="px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors"
          >
            Wróć
          </button>
        </div>
      </div>
    ) : (
      <div class="flex min-h-screen bg-gradient-to-b from-slate-950 via-slate-900 to-slate-950">
        {/* Sidebar with Modules */}
        <aside class="w-80 bg-slate-900/50 border-r border-white/10 overflow-y-auto">
          <div class="p-6">
            <div class="mb-6">
              <a
                href={`/courses/${courseId}`}
                class="text-blue-400 hover:text-blue-300 text-sm flex items-center gap-2 mb-2"
              >
                ← Powrót do kursu
              </a>
              <h2 class="text-xl font-bold text-white truncate">{course.title}</h2>
              <div class="mt-2 flex items-center gap-2">
                <div class="flex-1 h-2 bg-slate-700 rounded-full overflow-hidden">
                  <div class="h-full bg-blue-500 transition-all" style={`width: ${progress.percentage}%`} />
                </div>
                <span class="text-sm text-gray-400">{progress.percentage}%</span>
              </div>
              <p class="text-xs text-gray-500 mt-1">
                {progress.completed} z {progress.total} lekcji ukończonych
              </p>
            </div>

            <ModulesList
              modules={modulesWithLessons}
              currentLessonId={lessonId}
              courseId={courseId}
              client:load
            />
          </div>
        </aside>

        {/* Main Content */}
        <main class="flex-1 overflow-y-auto">
          <div class="max-w-4xl mx-auto p-8">
            {/* Lesson Header */}
            <div class="mb-8">
              <h1 class="text-3xl font-bold text-white mb-2">{lesson.title}</h1>
              <div class="flex items-center gap-4 text-sm text-gray-400">
                <span class="capitalize">{lesson.type === "quiz" ? "Lekcja Quiz" : "Lekcja Treściowa"}</span>
                {lesson.completed && (
                  <span class="px-2 py-1 bg-green-500/20 text-green-400 rounded-md text-xs font-medium">
                    ✓ Ukończone
                  </span>
                )}
              </div>
            </div>

            {/* Lesson Content Component */}
            <NewLessonContent lesson={lesson} client:load />

            {/* Mark as Complete Button */}
            {!lesson.completed && lesson.type === "content" && (
              <div class="mt-8 flex justify-end">
                <button
                  id="markCompleteBtn"
                  class="px-6 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg font-semibold transition-colors"
                >
                  Oznacz jako ukończone
                </button>
              </div>
            )}
          </div>
        </main>

        {/* AI Chat Widget with lesson context */}
        <ChatWidget 
          client:load 
          contextType="lesson" 
          contextId={lessonId}
          contextTitle={lesson.title}
        />
      </div>
    )
  }
</Layout>

<script>
  // Mark lesson as complete
  const markCompleteBtn = document.getElementById("markCompleteBtn");
  if (markCompleteBtn) {
    markCompleteBtn.addEventListener("click", async () => {
      const lessonId = window.location.pathname.split("/").pop();
      const courseId = window.location.pathname.split("/")[2];

      // Disable button during request
      markCompleteBtn.disabled = true;
      markCompleteBtn.textContent = "Zapisywanie...";

      try {
        const response = await fetch("/api/user/lesson-progress", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            lesson_id: lessonId,
            course_id: courseId,
          }),
        });

        const result = await response.json();

        if (result.success) {
          window.location.reload();
        } else {
          alert(result.error || "Nie udało się oznaczyć lekcji jako ukończonej");
          markCompleteBtn.disabled = false;
          markCompleteBtn.textContent = "Oznacz jako ukończone";
        }
      } catch (error) {
        console.error("Error marking lesson as complete:", error);
        alert("Wystąpił błąd");
        markCompleteBtn.disabled = false;
        markCompleteBtn.textContent = "Oznacz jako ukończone";
      }
    });
  }
</script>
