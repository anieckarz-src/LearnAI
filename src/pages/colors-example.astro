---
// Przykładowa strona demonstrująca użycie globalnych kolorów
import Layout from "../layouts/Layout.astro";
import Button from "../components/ui/Button.astro";
import Card from "../components/ui/Card.astro";
---

<Layout title="Przykład Użycia Kolorów - LearnAI">
  <!-- Hero Section z kolorami landing page -->
  <section
    class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 flex items-center justify-center px-4"
  >
    <div class="max-w-4xl text-center">
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6">
        KOLORY<br />
        <span class="bg-gradient-to-r from-blue-400 via-blue-500 to-blue-600 text-transparent bg-clip-text">
          W AKCJI
        </span>
      </h1>

      <p class="text-xl text-gray-300 mb-12">Przykład użycia globalnego systemu kolorów z landing page</p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="primary" size="lg">Primary Button</Button>
        <Button variant="outline" size="lg">Outline Button</Button>
      </div>
    </div>
  </section>

  <!-- Sekcja z przyciskami -->
  <section class="bg-slate-950 py-24 px-4">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-4xl font-bold text-white text-center mb-12">
        <span class="bg-gradient-to-r from-blue-400 to-blue-600 text-transparent bg-clip-text">Przyciski</span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center space-y-4">
          <h3 class="text-xl font-semibold text-white mb-4">Primary</h3>
          <Button variant="primary" class="w-full">Small</Button>
          <Button variant="primary" size="md" class="w-full">Medium</Button>
          <Button variant="primary" size="lg" class="w-full">Large</Button>
        </div>

        <div class="text-center space-y-4">
          <h3 class="text-xl font-semibold text-white mb-4">Secondary</h3>
          <Button variant="secondary" class="w-full">Small</Button>
          <Button variant="secondary" size="md" class="w-full">Medium</Button>
          <Button variant="secondary" size="lg" class="w-full">Large</Button>
        </div>

        <div class="text-center space-y-4">
          <h3 class="text-xl font-semibold text-white mb-4">Outline</h3>
          <Button variant="outline" class="w-full">Small</Button>
          <Button variant="outline" size="md" class="w-full">Medium</Button>
          <Button variant="outline" size="lg" class="w-full">Large</Button>
        </div>

        <div class="text-center space-y-4">
          <h3 class="text-xl font-semibold text-white mb-4">Ghost</h3>
          <Button variant="ghost" class="w-full">Small</Button>
          <Button variant="ghost" size="md" class="w-full">Medium</Button>
          <Button variant="ghost" size="lg" class="w-full">Large</Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Sekcja z kartami -->
  <section class="bg-slate-900 py-24 px-4">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-4xl font-bold text-white text-center mb-12">
        <span class="bg-gradient-to-r from-blue-400 to-blue-600 text-transparent bg-clip-text">Karty</span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Default Card -->
        <Card variant="default">
          <h3 class="text-2xl font-bold text-white mb-4">Default Card</h3>
          <p class="text-gray-300 mb-4">Podstawowa karta z solidnym tłem slate-800.</p>
          <Button variant="primary" size="sm">Więcej</Button>
        </Card>

        <!-- Glass Card -->
        <Card variant="glass" hover={true}>
          <h3 class="text-2xl font-bold text-white mb-4">Glass Card</h3>
          <p class="text-gray-300 mb-4">Karta z efektem glass-morphism i hover effect.</p>
          <Button variant="outline" size="sm">Więcej</Button>
        </Card>

        <!-- Gradient Card with Glow -->
        <Card variant="gradient" hover={true} glow={true}>
          <h3 class="text-2xl font-bold text-white mb-4">Glow Card</h3>
          <p class="text-gray-300 mb-4">Karta z gradientem i efektem glow na hover.</p>
          <Button variant="secondary" size="sm">Więcej</Button>
        </Card>
      </div>
    </div>
  </section>

  <!-- Sekcja z tekstami i kolorami -->
  <section class="bg-slate-950 py-24 px-4">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-4xl font-bold text-white text-center mb-12">
        <span class="bg-gradient-to-r from-blue-400 to-blue-600 text-transparent bg-clip-text">Typografia & Kolory</span
        >
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Text Colors -->
        <div class="space-y-6">
          <h3 class="text-2xl font-semibold text-white mb-6">Kolory Tekstu</h3>

          <div>
            <p class="text-white text-lg mb-2">Primary Text (white)</p>
            <p class="text-sm text-gray-400">--foreground</p>
          </div>

          <div>
            <p class="text-gray-300 text-lg mb-2">Secondary Text (gray-300)</p>
            <p class="text-sm text-gray-400">--foreground-secondary</p>
          </div>

          <div>
            <p class="text-gray-400 text-lg mb-2">Muted Text (gray-400)</p>
            <p class="text-sm text-gray-400">--foreground-muted</p>
          </div>

          <div>
            <p class="text-blue-400 text-lg mb-2">Primary Blue (blue-400)</p>
            <p class="text-sm text-gray-400">--primary-light</p>
          </div>

          <div>
            <p class="text-blue-600 text-lg mb-2">Primary (blue-600)</p>
            <p class="text-sm text-gray-400">--primary</p>
          </div>
        </div>

        <!-- Gradient Text -->
        <div class="space-y-6">
          <h3 class="text-2xl font-semibold text-white mb-6">Gradient Text</h3>

          <div>
            <h1
              class="text-4xl font-bold bg-gradient-to-r from-blue-400 to-blue-600 text-transparent bg-clip-text mb-2"
            >
              Blue Gradient
            </h1>
            <p class="text-sm text-gray-400">from-blue-400 to-blue-600</p>
          </div>

          <div>
            <h1
              class="text-4xl font-bold bg-gradient-to-r from-blue-400 via-blue-500 to-blue-600 text-transparent bg-clip-text mb-2"
            >
              Blue Gradient (3-stop)
            </h1>
            <p class="text-sm text-gray-400">from-blue-400 via-blue-500 to-blue-600</p>
          </div>

          <div>
            <h1
              class="text-4xl font-bold bg-gradient-to-r from-blue-400 to-purple-600 text-transparent bg-clip-text mb-2"
            >
              Blue to Purple
            </h1>
            <p class="text-sm text-gray-400">from-blue-400 to-purple-600</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sekcja z background gradients -->
  <section class="bg-slate-900 py-24 px-4">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-4xl font-bold text-white text-center mb-12">
        <span class="bg-gradient-to-r from-blue-400 to-blue-600 text-transparent bg-clip-text"
          >Background Gradients</span
        >
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 rounded-2xl p-12 text-center">
          <h3 class="text-2xl font-bold text-white mb-4">Hero Gradient</h3>
          <p class="text-gray-300">from-slate-900 via-purple-900 to-slate-900</p>
        </div>

        <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-2xl p-12 text-center">
          <h3 class="text-2xl font-bold text-white mb-4">Card Gradient</h3>
          <p class="text-gray-300">from-slate-800 to-slate-900</p>
        </div>

        <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl p-12 text-center">
          <h3 class="text-2xl font-bold text-white mb-4">Accent Gradient</h3>
          <p class="text-white">from-blue-600 to-purple-600</p>
        </div>

        <div
          class="bg-gradient-to-br from-blue-500/20 via-purple-500/20 to-blue-500/20 rounded-2xl p-12 text-center border border-white/10"
        >
          <h3 class="text-2xl font-bold text-white mb-4">Subtle Gradient</h3>
          <p class="text-gray-300">from-blue-500/20 via-purple-500/20 to-blue-500/20</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <section class="bg-slate-950 py-12 px-4 border-t border-white/10">
    <div class="max-w-7xl mx-auto text-center">
      <p class="text-gray-400 mb-4">Wszystkie kolory są dostępne globalnie jako zmienne CSS i klasy Tailwind</p>
      <Button href="/" variant="primary">Powrót do Landing Page</Button>
    </div>
  </section>
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
