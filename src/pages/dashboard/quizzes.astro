---
import UserLayout from "@/layouts/UserLayout.astro";
import { QuizHistory } from "@/components/user/QuizHistory";
import { ChatWidget } from "@/components/chat/ChatWidget";

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/login?redirect=/dashboard/quizzes");
}

// Redirect admins to admin dashboard
if (user.role === "admin") {
  return Astro.redirect("/admin/quizzes");
}
---

<UserLayout 
  title="Moje Quizy" 
  description="Historia i wyniki twoich quizÃ³w"
  user={user} 
  currentPath={Astro.url.pathname}
>
  <!-- AI Chat Widget -->
  <ChatWidget client:load contextType="general" />

  <!-- Quiz History Component -->
  <QuizHistory client:load />
</UserLayout>
