---
import UserLayout from "@/layouts/UserLayout.astro";
import { ProfileSettings } from "@/components/user/ProfileSettings";
import { ChatWidget } from "@/components/chat/ChatWidget";

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/login?redirect=/dashboard/profile");
}

// Redirect admins to admin dashboard
if (user.role === "admin") {
  return Astro.redirect("/admin/settings");
}
---

<UserLayout 
  title="Mój Profil" 
  description="Zarządzaj swoim kontem i ustawieniami"
  user={user} 
  currentPath={Astro.url.pathname}
>
  <!-- AI Chat Widget -->
  <ChatWidget client:load contextType="general" />

  <!-- Profile Settings Component -->
  <ProfileSettings user={user} client:load />
</UserLayout>
